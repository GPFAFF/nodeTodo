html(lang='en')
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  title Todo List
  link(rel='stylesheet' type='text/css' href='./css/styles.css')
main
  h1 ToDo App
  form#todoForm(action='/create-item' method='POST')
    label(for='todo') Todo List
    input#todo(
      name='todoItem' 
      type='text' 
      placeholder='Add Todo'
      autocomplete='off'
    )
    button(
      type='button' 
      action='/create-item'
      method='POST'
    ).addTodo Add Todo
  ul#todoList
    each item in items
      li
        span= item.text
        button.edit(data-id=item._id) Edit
        button.delete(data-id=item._id) Delete

script(src='https://unpkg.com/axios/dist/axios.min.js')
script(src='./index.js')